extends layouts/layout.pug

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        .card.shadow
          .card-body.p-4
            h2.card-title.text-center.mb-4 Register
            
            // This block displays an error message if passed from the server
            if error && error.length > 0
              .alert.alert-danger.text-center(role="alert")= error
            
            // Registration form
            form(action="/auth/register", method="POST")
              .mb-3
                label.form-label(for="first_name") First Name
                input.form-control(
                  type="text",
                  id="first_name",
                  name="first_name",
                  required
                )
              .mb-3
                label.form-label(for="last_name") Last Name
                input.form-control(
                  type="text",
                  id="last_name",
                  name="last_name",
                  required
                )
              .mb-3
                label.form-label(for="email") E-mail Address
                input.form-control(
                  type="email",
                  id="email",
                  name="email",
                  required,
                  aria-describedby="emailHelp"
                )
                .form-text#emailHelp Enter a valid email address.

              .mb-3
                label.form-label(for="password") Password
                input.form-control(
                  type="password",
                  id="password",
                  name="password",
                  required
                )

              .mb-3
                label.form-label(for="passwordConfirm") Confirm Password
                input.form-control(
                  type="password",
                  id="passwordConfirm",
                  name="passwordConfirm",
                  required
                )

              button.btn.btn-primary.w-100(type="submit") Register
            
            hr.my-4
            
            p.text-center Already have an account? #[a(href="/auth/login") Log in here]